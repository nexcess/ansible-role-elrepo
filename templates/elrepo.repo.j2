### Name: ELRepo.org Community Enterprise Linux Repository for el{{ elrepo_dist }}
### URL: http://elrepo.org/

[elrepo]
name=ELRepo.org Community Enterprise Linux Repository - el{{ elrepo_dist }}
baseurl=http://elrepo.org/linux/elrepo/el{{ elrepo_dist }}/$basearch/
	http://mirrors.coreix.net/elrepo/elrepo/el{{ elrepo_dist }}/$basearch/
	http://mirror.rackspace.com/elrepo/elrepo/el{{ elrepo_dist }}/$basearch/
	http://repos.lax-noc.com/elrepo/elrepo/el{{ elrepo_dist }}/$basearch/
	http://mirror.ventraip.net.au/elrepo/elrepo/el{{ elrepo_dist }}/$basearch/
mirrorlist=http://mirrors.elrepo.org/mirrors-elrepo.el{{ elrepo_dist }}
enabled={{ '1' if elrepo_repository_elrepo|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-elrepo.org
protect=0

